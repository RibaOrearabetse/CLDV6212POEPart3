@model IEnumerable<ABCRetailers.Models.Order>
@using System.Globalization

@{
    ViewData["Title"] = "Orders";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>All Orders</h2>
            <p class="text-muted">Manage and view all customer orders</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-primary">Create New Order</a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Orders Table</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total Price</th>
                                        <th>Order Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.OrderId</td>
                                            <td>@item.Username</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Price.ToString("C", new CultureInfo("en-ZA"))</td>
                                            <td><strong>@item.TotalPrice.ToString("C", new CultureInfo("en-ZA"))</strong></td>
                                            <td>@item.OrderDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <span class="badge bg-@(item.Status switch {
                                                    "Submitted" => "primary",
                                                    "Processing" => "warning",
                                                    "PROCESSED" => "success",
                                                    "Shipped" => "info",
                                                    "Delivered" => "success",
                                                    "Cancelled" => "danger",
                                                    _ => "secondary"
                                                })">@item.Status</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@item.RowKey" class="btn btn-sm btn-primary">Manage</a>
                                                    <a asp-action="Details" asp-route-id="@item.RowKey" class="btn btn-sm btn-info">Details</a>
                                                    <a asp-action="UpdateStatus" asp-route-id="@item.RowKey" class="btn btn-sm btn-warning">Status</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <p class="mb-0">No orders found.</p>
                </div>
            </div>
        </div>
    }
</div>
